<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/dementor_guide_bottom"
    android:padding="5dp" >
    
    <LinearLayout 
        android:id="@+id/laytou_guid_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        
        <CheckBox
	         android:id="@+id/btn_guid_left"
	         android:layout_width="15dp"
	         android:layout_height="15dp"
	         android:button="@null"
	         android:background="@drawable/dementor_check_box"
	         android:textSize="12sp" />
        
      	<TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_marginLeft="5dp"
	         android:text="다시 보지 않기"
	         android:textSize="12sp" />
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_guid_right"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
       	android:layout_alignParentRight="true"
        android:background="@drawable/dementor_btn_guide_next_normal" />

</RelativeLayout>
