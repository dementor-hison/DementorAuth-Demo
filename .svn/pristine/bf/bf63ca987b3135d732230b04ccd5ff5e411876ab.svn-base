<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dementor_textLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dip" >

        <TextView
            android:id="@+id/txtSubTitle"
            android:textColor="#47ad2b"
            android:textSize="17sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/txtDescription"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dementor_iconsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingTop="3dp" 
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="left" >

            <ImageView
                android:id="@+id/dementor_stateIcon1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/dementor_key_hole_normal" />
            
            <ImageView
                android:id="@+id/dementor_check1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:clickable="false"
                android:src="@drawable/dementor_check" />
            
            <ImageView
                android:id="@+id/dementor_confirm1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:clickable="false"
                android:visibility="invisible"/>
            
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="left" >

            <ImageView
                android:id="@+id/dementor_stateIcon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/dementor_key_1key_normal" />
            
            <ImageView
                android:id="@+id/dementor_check2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:clickable="false"
                android:src="@drawable/dementor_check" />
            
            <ImageView
                android:id="@+id/dementor_confirm2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:clickable="false"
                android:visibility="invisible"/>
            
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:gravity="left" >

            <ImageView
                android:id="@+id/dementor_stateIcon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:clickable="true"
                android:src="@drawable/dementor_key_2key_normal" />
            
            <ImageView
                android:id="@+id/dementor_check3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:clickable="false"
                android:src="@drawable/dementor_check" />
            
            <ImageView
                android:id="@+id/dementor_confirm3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:clickable="false"
                android:visibility="invisible"/>
            
        </FrameLayout>
        
        
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
	            android:id="@+id/dementor_stateIcon4"
	            android:layout_width="50dp"
	            android:layout_height="50dp"
	            android:layout_gravity="right"
	            android:scaleType="fitXY"
	            android:clickable="true"
	            android:src="@drawable/dementor_key_3key_normal" />
            
            <ImageView
                android:id="@+id/dementor_check4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:clickable="false"
                android:src="@drawable/dementor_check" />
            
            <ImageView
                android:id="@+id/dementor_confirm4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:clickable="false"
                android:visibility="invisible"/>
            
        </FrameLayout>
        
    </LinearLayout>
    
</LinearLayout>
