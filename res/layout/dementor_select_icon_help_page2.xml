<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_help_background1"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:src="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_help_background2"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@android:color/black" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dementor_help_frame_shadow" />

                <ImageView
                    android:id="@+id/iv_help_step3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/dementor_help_frame" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_help_background3"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:src="@android:color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_help_background4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:color/black" />

            <ImageView
                android:id="@+id/iv_help_step3_arrow"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="24dp"
                android:scaleType="fitXY"
                android:src="@drawable/dementor_help_step3_arrow" />

            <TextView
                android:id="@+id/tv_help_step3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:minWidth="200dp"
                android:textColor="@android:color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

    <kr.co.dementorauth.ui.help.HelpBottomBar
        android:id="@+id/helpBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>