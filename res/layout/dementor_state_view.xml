<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="73.5dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="7dp" >

            <View
                android:id="@+id/progress_off"
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <View
                android:id="@+id/progress_on"
                android:layout_width="0dp"
                android:layout_height="4dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="73.5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="42.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="26dp" >

                <ImageView
                    android:id="@+id/state_place0"
                    android:layout_width="42.5dp"
                    android:layout_height="49.5dp"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dementor_icon_lock" />

                <kr.co.dementorauth.ui.IconImageView
                    android:id="@+id/hint0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="42.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="26dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/state_place1"
                    android:layout_width="42.5dp"
                    android:layout_height="49.5dp"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dementor_icon_key_1" />

                <kr.co.dementorauth.ui.IconImageView
                    android:id="@+id/hint1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="42.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="26dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/state_place2"
                    android:layout_width="42.5dp"
                    android:layout_height="49.5dp"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dementor_icon_key_2" />

                <kr.co.dementorauth.ui.IconImageView
                    android:id="@+id/hint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:visibility="invisible" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="42.5dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/state_place3"
                    android:layout_width="42.5dp"
                    android:layout_height="49.5dp"
                    android:src="@drawable/dementor_place_img_1" />

                <RelativeLayout
                    android:layout_width="17.5dp"
                    android:layout_height="17.5dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@android:color/white" >

                    <ImageView
                        android:id="@+id/state_dot3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/dementor_place_img_2" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dementor_icon_key_3" />

                <kr.co.dementorauth.ui.IconImageView
                    android:id="@+id/hint3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:visibility="invisible" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/help_text"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="자물쇠 아이콘을 선택합니다."
        android:textColor="@android:color/darker_gray"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>